.message
  .upper-message.clearfix
    .upper-message__user-name
      = message.user.name
    .upper-message__date
      = format_posted_time(message.created_at)
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
      = image_tag message.image.url, class: 'lower-message__picture' if message.image.present?
